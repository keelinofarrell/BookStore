<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:fillViewport="true"
    android:id="@+id/bookview"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.keelinofarrell.bookstore.BookSingleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backdrop"
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:scaleType="centerCrop"
            android:src="@drawable/books1" />



        <LinearLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="21dp"
            android:paddingRight="30dp"
            android:id="@+id/booksdetails">

                <ImageView
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:layout_marginTop="25dp"
                    android:id="@+id/bookCover"
                    android:src="@drawable/defaultbook"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="18dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Details"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/bookdetails"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/BookISBN"
                    android:padding="5sp"
                    android:hint="ISBN"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/BookTitle"
                    android:padding="5sp"
                    android:hint="Title"/>


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/BookAuthor"
                    android:hint="Author"
                    android:padding="5sp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/BookCategory"
                    android:hint="Category"
                    android:padding="5sp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/BookPrice"
                    android:hint="Price"
                    android:padding="5sp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/BookQuantity"
                    android:hint="Stock Quantity"
                    android:padding="5sp"/>


            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Changes"
            android:id="@+id/change"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go Back"
            android:id="@+id/back"/>

    </LinearLayout>

</ScrollView>
